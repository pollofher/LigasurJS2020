@section scripts{
    <script>
        //Show Modal.
        function addNewjugador() {
            $("#newOrderModal").modal();
        }
        //Add Multiple Order.
        $("#addToList").click(function (e) {
            e.preventDefault();

            if ($.trim($("#cedula").val()) == "" || $.trim($("#nom_jugador").val()) == "" || $.trim($("#apelli_jugador").val()) == "" || $.trim($("#CARNET").val()) == "" || $.trim($("#fechaNacimiento").val()) == "" || $.trim($("#fotografia").val()) == "" || $.trim($("#afiliacion").val()) == "" || $.trim($("#estadocivil").val()) == "" || $.trim($("#instruccion").val()) == "" || $.trim($("#profesion").val()) == "" || $.trim($("#provincia").val()) == "" || $.trim($("#parroquia").val()) == "") return;

            var cedula = $("#cedula").val(),
                Nombres = $("#nom_jugador").val(),
                Apellidos = $("#apelli_jugador").val(),
                CARNET = $("#CARNET").val(),
                fechaNacimiento = $("#fechaNacimiento").val(),
                fotografia = $("#fotografia").val(),
                afiliacion = $("#afiliacion").val(),
                estadocivil = $("#estadocivil").val(),
                instruccion = $("#instruccion").val(),
                profesion = $("#profesion").val(),
                provincia = $("#provincia").val(),
                parroquia = $("#parroquia").val(),
                detailsTableBody = $("#detailsTable tbody");

            var jugadorItem = '<tr><td>' + cedula + '</td><td>' + Nombres + '</td><td>' + Apellidos + '</td><td>' + CARNET + '</td><td>' + fechaNacimiento + '</td><td>' + fotografia+ '</td><td>' + afiliacion + '</td><td>' + estadocivil + '</td><td>' + instruccion + '</td><td>' + profesion + '</td><td>' + provincia + '</td><td>' + parroquia + '</td><td><a data-itemId="0" href="#" class="deleteItem">Remove</a></td></tr>';
            detailsTableBody.append(jugadorItem);
            clearItem();
        });
        //After Add A New Order In The List, Clear Clean The Form For Add More Order.
        function clearItem() {
            $("#cedula").val('');
            $("#nom_jugador").val('');
            $("#apelli_jugador").val('');
            $('#CARNET').val('');
            $('#fechaNacimiento').val('');
            $('#fotografia').val('');
            $('#afiliacion').val('');
            $('#estadocivil').val('');
            $('#instruccion').val('');
            $('#profesion').val('');
            $('#provincia').val('');
            $('#parroquia').val('');
        }
        // After Add A New Order In The List, If You Want, You Can Remove It.
        $(document).on('click', 'a.deleteItem', function (e) {
            e.preventDefault();
            var $self = $(this);
            if ($(this).attr('data-itemId') == "0") {
                $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {
                    $(this).remove();
                });
            }
        });
        //After Click Save Button Pass All Data View To Controller For Save Database
        function saveOrder(data) {
            return $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: "/Jugadores/SaveOrder",
                data: data,
                success: function (result) {
                    alert(result);
                    location.reload();
                },
                error: function () {
                    alert("Error!")
                }
            });
        }
        //Collect Multiple Order List For Pass To Controller
        $("#saveOrder").click(function (e) {
            e.preventDefault();

            var jugadorArr = [];
            jugadorArr.length = 0;

            $.each($("#detailsTable tbody tr"), function () {
                jugadorArr.push({
                    cedula: $(this).find('td:eq(0)').html(),
                    nom_jugador: $(this).find('td:eq(1)').html(),
                    apelli_jugador: $(this).find('td:eq(2)').html(),
                    CARNET: $(this).find('td:eq(3)').html(),
                    fechaNacimiento: $(this).find('td:eq(4)').html(),
                    fotografia: $(this).find('td:eq(5)').html(),
                    afiliacion: $(this).find('td:eq(6)').html(),
                    estadocivil: $(this).find('td:eq(7)').html(),
                    instruccion: $(this).find('td:eq(8)').html(),
                    profesion: $(this).find('td:eq(9)').html(),
                    provincia: $(this).find('td:eq(10)').html(),
                    parroquia: $(this).find('td:eq(11)').html()
                });
            });


            var data = JSON.stringify({
                nom_equipo: $("#nom_equipo").val(),
                colores: $("#colores").val(),
                jugador: jugadorArr
            });

            $.when(saveOrder(data)).then(function (response) {
                console.log(response);
            }).fail(function (err) {
                console.log(err);
            });
        });
    </script>
}