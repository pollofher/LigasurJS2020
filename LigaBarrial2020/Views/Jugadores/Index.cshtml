@model IEnumerable<LigaBarrial2020.Models.Equipo>
@{
    ViewBag.Title = "Index";
}

<br /><br />
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <h2 class="panel-title pull-left" style="margin-left:10px;">
                <strong>Jugadores Detalles</strong>
            </h2>
            <button style="margin-right:10px" class="btn btn-primary pull-right" onclick="addNewjugador()">Nuevo jugador</button>
        </div>
    </div>

    @*Receive All Database Data From Controller And Display Those Data In Client Side*@

    @if (Model.Count() != 0)
    {
        foreach (var item in Model)
        {
            <div class="panel-body">
                <table class="table table-striped table-responsive">
                    <tbody>
                        <tr>
                            <td>Equipo : @item.nom_equipo </td>
                            <td>Colores : @item.colores </td>
                            <td>Fundación : @item.fundacion</td>
                            <td>Escudo: @item.Escudo</td>
                            <td>Serie: @item.Serie</td>
                            <td>Estado: @item.Estado</td>
                            <td>Dirigente: @item.id_dirigente</td>
                        </tr>
                        <tr>
                            <td colspan="8">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <th>Cédula</th>
                                            <th>Nombres</th>
                                            <th>Apellidos</th>
                                            <th>Carnet</th>
                                            <th>Fecha Nacimiento</th>
                                            <th>Fotografia</th>
                                            <th>Fecha Afiliación</th>
                                            <th>Estado Civil</th>
                                            <th>Instrucción</th>
                                            <th>Profesión</th>
                                            <th>Provincia</th>
                                            <th>Parroquia</th>

                                        </tr>
                                       
                                        @foreach (var jugador in item.Jugador)
                                        {
                                            <tr>
                                                <td>@jugador.cedula</td>
                                                <td>@jugador.nom_jugador</td>
                                                <td>@jugador.apelli_jugador</td>
                                                <td>@jugador.CARNET</td>
                                                <td>@jugador.fechaNacimiento</td>
                                                <td>@jugador.fotografia</td>
                                                <td>@jugador.afiliacion</td>
                                                <td>@jugador.estadocivil</td>
                                                <td>@jugador.instruccion</td>
                                                <td>@jugador.profesion</td>
                                                <td>@jugador.provincia</td>
                                                <td>@jugador.parroquia</td>
                                            </tr>
                                            
                                        }
                                    </tbody>
                                </table>
                               
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
                                                }
                                            }
                                           
</div>



@*Desing Bootdtrap Modal With Order Form*@

